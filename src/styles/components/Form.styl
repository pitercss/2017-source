.Form
  +at-large()
    display: flex
    flex-wrap: wrap

  +at-small()
    margin-top: 4.6rem

  & > *
    flex-basis: calc(50% - 2.4rem)
    flex-grow: 1
    margin-bottom: 1.6rem

    +at-large()
      margin-right: 2.4rem

    +at-small()
      margin-bottom: 4rem

  &-Label
    position: relative
    display: flex
    flex-direction: column

    &-Text
      order: -1
      font-size: 1.4rem
      color: #77808A

      +at-small()
        font-size: 2.3rem

    &-Error
      font-size: 1.4rem
      color: $Colors.Input_error

    &:hover &-Text,
    :focus + &-Text
      color: $_BrandColors.Green

  &-Label > &-Input
    display: block
    width: 100%

  & .ui-Input
    height: 3.2rem
    padding-right: 24px
    padding-bottom: 1.4rem
    line-height: @height - @padding-bottom
    box-shadow: inset 0 -2px 0

    &.with-error
      box-shadow: inset 0 -2px 0 $Colors.Input_error

    &:hover,
    &:focus
      box-shadow: inset 0 -2px 0 $_BrandColors.Green

  &-Status
    position: absolute
    top: 25px
    right: 0
    width: 24px
    text-align: center

    +at-small()
      top: 32px
      width: 44px

  &-Status > .ui-Icon
    display: none

    +at-small()
      & > .ui-Icon-Image
        width: 40px
        height: 40px

  .with-error + * + &-Status > .ui-Icon_Error,
  .is-valid + * + &-Status > .ui-Icon_Valid
    display: inline-block


  & .ui-Link
    font-size: 1.4rem

  &-PaymentSystem
    display: flex

    box-shadow: inset 0 0 0 2px #B4BDC7

    +at-small()
      margin-bottom: 1rem

    &-Input
      position: absolute
      clip: rect(1px,1px,1px,1px)

    &-Item
      flex-basis: 50%
      flex-grow: 1

    &-View
      cursor: pointer

      display: flex
      align-items: center
      justify-content: center

      height: 48px

      color: #B4BDC7

      +at-small()
        height: 96px

      :focus + &
        box-shadow: 0 0 0 3px $_BrandColors.Green

      :not(:checked) + &:hover
        color: #77808A

      :checked + &
        cursor: default

        background: #77808A
        color: #FFF

    +at-small()
      & .ui-Icon_YandexKassa .ui-Icon-Image
        width: 220px
        height: 48px

      & .ui-Icon_PayPal .ui-Icon-Image
        width: 166px
        height: 44px

  & .PriceInfo
    flex-basis: 100%

  &-Disclaimer
    flex-basis: 100%

    margin-top: 5px

    text-align: right

    font-size: 1.4rem

    color: #77808A

    +at-small()
      text-align: center

  &-Action
    height: 70px
    padding-top: 0.4rem
    margin-top: 23px

    font-size: 2.6rem

    +at-small()
      height: 110px
      font-size: 3.6rem

  &-Promo
    min-width: 175px
    margin-top: 4.8rem

    +at-large()
      flex-basis: 0

      width: 175px

    +at-small()
      width: 100%
      margin-top: 0

  &-CachlessInfo
    margin-top: 1rem

    +at-small()
      &&
        align-self: center
        margin-top: 0

  &-Alert
    border-left 3px solid #00e2b5
    display inline-block
    padding .8rem 1.8rem
    color #00e2b5
